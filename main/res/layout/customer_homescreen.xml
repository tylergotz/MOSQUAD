<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/welcomeTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/serviceOptions"
        android:id="@+id/serviceOptionTextView"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/welcomeTextView"
        android:layout_alignLeft="@+id/welcomeTextView"
        android:layout_alignStart="@+id/welcomeTextView" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/serviceOptionListView"
        android:layout_below="@+id/serviceOptionTextView"
        android:layout_alignLeft="@+id/serviceOptionTextView"
        android:layout_alignStart="@+id/serviceOptionTextView" />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="@string/messages"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/messagesBTN"
        android:layout_below="@+id/serviceOptionListView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>